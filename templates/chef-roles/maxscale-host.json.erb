{
  "name": "maxscale-host",
  "description": "A server with maxscale and sysbench installed",
  "json_class": "Chef::Role",
  "chef_type": "role",
  "run_list": [
    "recipe[mariadb-maxscale::reinstall_maxscale]",
    "recipe[sysbench::install]"
  ],
  "default_attributes": {
    "maxscale" : {
      "repo" : "http://max-tst-01.mariadb.com/ci-repository/<%= maxscale_version %>/mariadb-maxscale/ubuntu <%= ubuntu_release %> main"
    }
  }
}
